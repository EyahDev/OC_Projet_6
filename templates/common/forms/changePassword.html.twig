<div class="col xl10 l10 m10 s12 offset-xl1 offset-l1 offset-m1" id="changePasswordForm" data-url="{{ path('reload-change-password-form') }}">
    {{form_start(passwordForm)}}

    <div class="row">
        <div class="input-field col xl12 l12 m12 s12">
            {{form_widget(passwordForm.oldPassword)}}
            {{form_label(passwordForm.oldPassword)}}
        </div>

        <div class="input-field col xl12 l12 m12 s12">
            {{form_widget(passwordForm.newPassword.first)}}
            {{form_label(passwordForm.newPassword.first)}}
        </div>

        <div class="input-field col xl12 l12 m12 s12">
            {{form_widget(passwordForm.newPassword.second)}}
            {{form_label(passwordForm.newPassword.second)}}
        </div>

        <div class="input-field col xl12 l12 m12 s12">
            {{form_widget(passwordForm.submit, {'attr': {'data-url': path('change-user-password') }})}}
        </div>

        <div class="col xl12 l12 m12 s12">
            <div class="progress progress-user-password">
                <div class="indeterminate"></div>
            </div>
        </div>

        {{form_end(passwordForm)}}
    </div>
</div>