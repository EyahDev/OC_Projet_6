{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('../public/build/css/login.css') }}">
{% endblock %}

{% block title %}
    Réinitialisation du mot de passe
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 l6 xl4 offset-l3 offset-xl4">
            <div class="card">
                <div class="card-content">
                    <div class="center-align">
                        <img class="responsive-img " src="{{ asset('../public/build/img/logo.png') }}" alt="logo">
                        <h1>Ecurie Fief Malzais</h1>
                    </div>

                    <h4 class="center-align">Réinitialisation du mot de passe</h4>

                    {{ form_start(resetPasswordForm)}}
                    {{ form_errors(resetPasswordForm)}}

                    {% if not resetPasswordForm.vars.valid %}
                        <div class="card-panel deep-orange accent-4">
                            {{ form_errors(resetPasswordForm) }}
                            {{ form_errors(resetPasswordForm.newPassword.first) }}
                            {{ form_errors(resetPasswordForm.newPassword.second) }}
                        </div>
                    {% endif %}

                        <div class="input-field">
                            {{ form_widget(resetPasswordForm.newPassword.first)}}
                            {{ form_label(resetPasswordForm.newPassword.first)}}
                        </div>

                        <div class="input-field">
                            {{ form_widget(resetPasswordForm.newPassword.second)}}
                            {{ form_label(resetPasswordForm.newPassword.second)}}
                        </div>

                        {{ form_widget(resetPasswordForm.submit)}}
                        {{ form_label(resetPasswordForm.submit)}}

                    {{ form_end(resetPasswordForm)}}

                </div>
            </div>
        </div>
    </div>
{% endblock %}