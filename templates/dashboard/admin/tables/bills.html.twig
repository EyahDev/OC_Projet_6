{% if paginationBills['bills'] is empty %}
    <p>{{ user.firstName }} n'a pas encore de factures.</p>
{% else %}
    <div id="table-bills">
        <div class="table-responsive-vertical">
            <table id="table" class="table table-hover table-mc-light-green">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Type de facture</th>
                    <th>Montant</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody id="billsTR">
                {% for bill in paginationBills['bills'] %}
                    <tr class="cursor modal-trigger update-bill-modal-trigger" id="update-bill-modal-{{ bill.id }}" data-url="{{ path('update-bill-form', {'id': bill.id}) }}" data-id="{{ bill.id }}">
                        <td data-title="Date">{{ bill.billDate|date('d/m/Y') }}</td>
                        <td data-title="Type de facture">{{ bill.type.name }}</td>
                        <td data-title="Montant">{{ bill.amount }} â‚¬</td>
                        <td data-title="Statut">{{ bill.status.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {{ include('dashboard/admin/ajax/pagination/bills.html.twig') }}

    </div>
{% endif %}