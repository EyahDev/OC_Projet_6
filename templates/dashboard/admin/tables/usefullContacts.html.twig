<div id="usefullContacts" data-url="{{ path('reload-usefull-contacts') }}">
    {% for contactType in contacts %}
        <ul class="collection with-header col xl12 l12 m12 s12">
            <li class="collection-header"><h5>{{ contactType.name }}</h5></li>
            {% for contact in contactType.contacts  %}
                <li class="collection-item">{{ contact.name }}
                    <span class="secondary-content">
                        <a class="hypertext" href="tel:{{ contact.phone }}">{{ contact.phone|phone }}</a> | <a class="hypertext modal-trigger" href="#editModal{{ loop.index }}">Editer</a>
                    </span>

                    <div id="editModal{{ loop.index }}" class="modal">
                        <div class="modal-content">
                            <h4>Edition d'un contact</h4>

                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>