<div id="usefullContacts" data-url="{{ path('reload-usefull-contacts') }}">
    {% for contactType in contacts %}
        {% if contactType.contacts is not empty %}
        <ul class="collection with-header col xl12 l12 m12 s12">
                <li class="collection-header"><h5>{{ contactType.name }}</h5></li>
            {% for contact in contactType.contacts  %}
                <li class="collection-item">{{ contact.name }}
                    <span class="secondary-content">
                        <a class="hypertext" href="tel:{{ contact.phone }}">{{ contact.phone|phone }}</a> | <a class="hypertext modal-trigger edit-contact-modal-trigger" href="#editModal{{ contact.id }}" data-id="{{ contact.id }}">Editer</a>
                    </span>

                    <div class="edit-contact-modal" id="edit-contact-modal-{{ contact.id }}" data-url="{{ path('update-contact-form', {'id': contact.id }) }}" data-id="{{ contact.id }}">
                        <div id="editModal{{ contact.id }}" class="modal">
                            <div id="modalContent{{ contact.id }}"></div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endfor %}
</div>

