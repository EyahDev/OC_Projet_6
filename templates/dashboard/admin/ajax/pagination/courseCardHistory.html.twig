{% if paginationCourseCardHistory > 1 %}
<ul class="pagination center-align" id="paginateCourseCardHistory">
    {% if paginationCourseCardHistory['currentPage'] <= 1 %}
        <li class="disabled"><i class="material-icons">chevron_left</i></li>
    {% else %}
        <li class="waves-effect"><a href="{{ path('paginate-course-card-history',{'currentPage': paginationCourseCardHistory['currentPage']|number_format -1, 'id': user.id }) }}"><i class="material-icons">chevron_left</i></a></li>
    {% endif %}

    {% for i in 1..paginationCourseCardHistory['nbPage'] %}
        {% if i == paginationCourseCardHistory['currentPage'] %}
            <li class="active"><a href="{{ path('paginate-course-card-history',{'currentPage': i, 'id': user.id }) }}" data-current="{{ paginationCourseCardHistory['currentPage'] }}">{{ i }}</a></li>
        {% else %}
            <li><a href="{{ path('paginate-course-card-history',{'currentPage': i, 'id': user.id }) }}">{{ i }}</a></li>
        {% endif %}
    {% endfor %}

    {% if paginationCourseCardHistory['currentPage'] >= paginationCourseCardHistory['nbPage'] %}
        <li class="disabled"><i class="material-icons">chevron_right</i></li>
    {% else %}
        <li class="waves-effect"><a href="{{ path('paginate-course-card-history',{'currentPage': paginationCourseCardHistory['currentPage']|number_format +1, 'id': user.id }) }}"><i class="material-icons">chevron_right</i></a></li>
    {% endif %}
</ul>
{% endif %}