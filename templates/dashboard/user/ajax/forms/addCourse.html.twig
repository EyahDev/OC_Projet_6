<div class="row" id="add-course-submit" data-url="{{ path('add-course') }}">
    {{ form_start(addCourseForm) }}

    <div class="input-field col xl10 l10 m10 s12 offset-xl1 offset-l1 offset-m1">
        <div class="row">
            <div class="input-field col xl6 l6 m12 s12">
                {{form_widget(addCourseForm.courseHours) }}
                {{form_label(addCourseForm.courseHours) }}

            </div>
            <div class="input-field col xl6 l6 m12 s12">
                {{ form_widget(addCourseForm.courseType) }}
                {{ form_label(addCourseForm.courseType) }}
            </div>
        </div>
    </div>

    <div class="input-field col xl10 l10 m10 s12 offset-xl1 offset-l1 offset-m1">
        {{ form_widget(addCourseForm.submit) }}

        <div class="progress progress-add-course">
            <div class="indeterminate"></div>
        </div>
    </div>

    {{form_end(addCourseForm)}}

</div>