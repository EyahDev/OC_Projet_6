<div id="usefullContacts" data-url="{{ path('reload-usefull-contacts') }}">
    {% for contactType in contacts %}
        {% if contactType.contacts is not empty %}
        <ul class="collection with-header col xl12 l12 m12 s12">
                <li class="collection-header">
                    <h5>{{ contactType.name }}</h5>
                </li>
            {% for contact in contactType.contacts  %}
                <li class="collection-item">{{ contact.name }}
                    <span class="secondary-content">
                        <a class="hypertext" href="tel:{{ contact.phone }}">{{ contact.phone|phone }}</a>
                    </span>
                </li>
            {% endfor %}
        </ul>
        {% endif %}
    {% endfor %}
</div>

