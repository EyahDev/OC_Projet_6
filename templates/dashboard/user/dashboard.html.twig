{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/table.css') }}">
    <link rel="stylesheet" href="{{ asset('build/css/dashboard.css') }}">
    <style>
        .card-notifications {
            padding: 10px !important;
        }
    </style>
{% endblock %}

{% block body %}

    {{ include('common/navUser.html.twig') }}

    <div class="row">
        <div class="col xl8 l8 m10 s12 offset-xl2 offset-l2 offset-m1">
            <div class="card">
                <div class="card-content">
                    <h3 class="center-align">Notifications</h3>
                    <div class="divider"></div>
                    <div class="card yellow">
                        <div class="card-content card-notifications">
                            {% for alert in app.user.alerts %}
                                <p>{{ alert.alertDescription }} <i class="material-icons right">clear</i></p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}


